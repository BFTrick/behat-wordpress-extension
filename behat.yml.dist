default:
  suites:
    default:
      path: %paths.base%/features
      contexts:
        - PaulGibbs\WordpressBehatExtension\Context\WordpressContext

  extensions:
    Behat\MinkExtension:
      base_url: http://wordpress-develop.dev
      goutte: ~

    PaulGibbs\WordpressBehatExtension:
      default_driver: wpcliWUT
      wpcli:
        alias: devwUT
        path: /path/example
        url: http://url/example.com
